@model Test1.Models.User

@{
    ViewBag.Title = "Delete User";
}

<h2 class="mb-4 text-danger">Delete User</h2>

<h5 class="mb-3">Are you sure you want to delete this user?</h5>

<div class="card shadow-sm p-4">
    <h4 class="card-title mb-3">User Details</h4>
    <hr />

    <dl class="row">
        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Name)</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DateOfBirth)</dt>
        <dd class="col-sm-9">@Model.DateOfBirth.ToString("dd/MM/yyyy")</dd>

        <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Address)</dt>
        <dd class="col-sm-9">@Html.DisplayFor(model => model.Address)</dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="mt-4">
            <input type="submit" value="Delete" class="btn btn-danger me-2" />
            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
        </div>
    }
</div>
