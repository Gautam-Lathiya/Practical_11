@model Test2.Models.User

@using (Html.BeginForm("DeleteConfirmed", "User", FormMethod.Post, new { @class = "mt-3" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="card p-4 shadow-sm border-danger">
        <h4 class="text-danger mb-3">
            <i class="bi bi-exclamation-triangle-fill"></i> Confirm Deletion
        </h4>

        <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>

        <div class="mt-4">
            <button type="submit" class="btn btn-danger me-2">
                <i class="bi bi-trash-fill"></i> Yes, Delete
            </button>
            <button type="button" class="btn btn-secondary" onclick="$('#userForm').html('');">
                Cancel
            </button>
        </div>
    </div>
}
