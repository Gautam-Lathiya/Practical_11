@model Test2.Models.User

@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    @Html.HiddenFor(m => m.Id)

    <div class="card p-4 shadow-sm">
        <h4 class="mb-4 text-primary">Edit Person</h4>

        <div class="mb-3">
            @Html.LabelFor(m => m.Name, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Name, new { @class = "form-control", placeholder = "Enter full name" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.DateOfBirth, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.DateOfBirth, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
        </div>

        <div class="mb-3">
            @Html.LabelFor(m => m.Address, htmlAttributes: new { @class = "form-label" })
            @Html.TextBoxFor(m => m.Address, new { @class = "form-control", placeholder = "Enter address" })
        </div>

        <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Update
        </button>
        <button type="button" class="btn btn-secondary ms-2" onclick="$('#userForm').html('');">
            Cancel
        </button>
    </div>
}
